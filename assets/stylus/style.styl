$youtube = #ff0000
$twitter = #1da1f3


html, body
	width: 100%
	height: 100vh
	font-family: "M PLUS Rounded 1c"
	background-color: #fbfee1

// Twemoji support
img.emoji
	width: 1em
	height: @width 
	margin: 0 .05em 0 .1em
	vertical-align: -.1em

.page
	padding: 2rem
	width: 100%
	display: flex
	flex-wrap: wrap
	flex-direction: column
	justify-content: center
	align-items: center
	&.landing
		height: 80%

.no-select
	user-select: none

.logo
	img&
		width: 20rem
	h1&
		font-family: "Fredoka One"

.social
	display: flex	

h3 
	margin-top: 2rem

// Hack Windows font rendering
p, li
	transform: rotate(.05deg)

.button
	width: 4rem
	height: @width
	border-radius: 50%
	display: flex
	justify-content: center
	align-items: center
	font-size: 1.5rem
	margin: 1rem .5rem
	color: white
	transition: .3s
	text-decoration: none
	.ion-logo-youtube&
		background-color: $youtube
		border: 3px solid $youtube
		&:hover
			cursor: pointer
			background-color: white
			color: $youtube
	.ion-logo-twitter&
		background-color: $twitter
		border: 3px solid $twitter
		&:hover
			cursor: pointer
			background-color: white
			color: $twitter

.widthwise
	display: flex

.member
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	margin: 3rem .5rem
	img
		width: 5rem
		height: @width
		object-fit: cover
		border-radius: 50%
		box-shadow: 0 0 10px rgba(black, .5)
	span
		background-color: white
		padding: 0 .7rem
		border-radius: 20px
		margin-top: -1rem
		../:nth-child(1) ^[1..-1]
			background-color: #ec407a
			color: white
		../:nth-child(2) ^[1..-1]
			background-color: #ab47bc
			color: white
	.icon
		vertical-align: -.1em
		text-decoration: none
		margin-left: .2rem
		font-size: 1.5rem
		color: $twitter

ul
	li
		list-style: none
		margin: 1em 0

	a
		text-decoration: none
		color: black
		transition: .2s
		&:hover
			color: #1E88E5

		li
			position: relative
			&::before
				color: $youtube
				margin-right: .2em
	ul a
		text-decoration: none
		&:first-child
			margin-left: 2em
		li
			display: inline-block
			margin: 0 1em
			position: relative


.footer 
	display: flex
	flex-wrap: none 
	justify-content: flex-end
	p
		margin: 0 .5rem
		color: gray
		font-size: .7rem