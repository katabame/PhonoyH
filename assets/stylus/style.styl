$youtube = #ff0000
$twitter = #1da1f3


html, body
	width: 100%
	height: 100vh
	font-family: "M PLUS Rounded 1c"
	background-color: #fbfee1

// Twemoji support
img.emoji
	width: 1em
	height: @width 
	margin: 0 .05em 0 .1em
	vertical-align: -.1em

.page
	padding: 2rem
	width: 100%
	display: flex
	flex-wrap: wrap
	flex-direction: column
	justify-content: center
	align-items: center
	&.landing
		height: 80%

h3 
	margin-top: 2rem

// Hack Windows font rendering
p
	transform: rotate(.05deg)

.footer 
	display: flex
	flex-wrap: none 
	justify-content: center
	p
		margin: 0 .5rem
		color: gray
		font-size: .7rem